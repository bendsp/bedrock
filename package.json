{
  "name": "bedrock",
  "productName": "Bedrock",
  "version": "4.0.12",
  "description": "A modern text editor - built with Electron and React",
  "repository": {
    "type": "git",
    "url": "https://github.com/bendsp/bedrock"
  },
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "build": "electron-forge make",
    "make:mac": "electron-forge make --platform=darwin",
    "make:mac:arm64": "electron-forge make --platform=darwin --arch=arm64",
    "make:mac:x64": "electron-forge make --platform=darwin --arch=x64",
    "make:win": "electron-forge make --platform=win32",
    "publish": "electron-forge publish",
    "publish:mac": "electron-forge publish --platform=darwin",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "ts-node --project tsconfig.json tests/index.ts"
  },
  "keywords": [],
  "author": {
    "name": "Ben Desprets",
    "email": "benjy.desprets@gmail.com"
  },
